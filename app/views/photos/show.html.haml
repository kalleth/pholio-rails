.photo-detail
  .row
    .span8.photo
      %img{src: @photo.image}
    .span4
      .row
        .span4
          %h2= @photo.title
          %p= @photo.description
          %p.extra= @photo.extra
      - if @photo.meta && !@photo.meta.empty?
        .row
          .span4.exif
            %h2 Image Data
            %table
              - @photo.meta.each do |code, value|
                %tr
                  %td= translate_exif_code(code)
                  %td= value
    .row
      .span12.prevnext
        - if @photo.previous
          = link_to photo_path(@photo.previous), class: 'left' do
            &larr;
            #{@photo.previous.title}
        - if @photo.next
          = link_to photo_path(@photo.next), class: 'right' do
            #{@photo.next.title}
            &rarr;

