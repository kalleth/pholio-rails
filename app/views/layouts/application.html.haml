%html
  %head
    %title #{Settings.site.title} - #{Settings.site.tagline}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{href: '/'}= Settings.site.title
          .nav-collapse.collapse
            %ul.nav
              %li.active 
                %a{href: '#'} Home
              %li 
                %a{href: '#'} Contact
              %li 
                %a{href: '#'} Imprint
    .container
      = yield
