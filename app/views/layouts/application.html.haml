!!!
%html
  %head
    %title #{Settings.site.title} - #{Settings.site.tagline}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{href: '/'}= Settings.site.tagline
          .nav-collapse.collapse
            %ul.nav
              %li.active Home
              %li Contact
              %li Imprint
    .container
      = yield
